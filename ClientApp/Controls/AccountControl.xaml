<UserControl x:Class="ClientApp.Controls.AccountControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:accountstruct="clr-namespace:ClientApp.AccountStruct" xmlns:controls="clr-namespace:ClientApp.Controls"
            
             mc:Ignorable="d"
       MouseDoubleClick="UserControl_MouseDoubleClick"
             d:DesignHeight="90" 
             d:DesignWidth="920"
             MaxWidth="2000">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Login.Name, UpdateSourceTrigger=PropertyChanged}" 
                   Padding="5"
                   Grid.Row="0"
                   VerticalAlignment="Top" 
                   TextWrapping="NoWrap"
                   FontSize="20"
                   TextTrimming="CharacterEllipsis"
                   FontWeight="Bold"/>
            <TextBlock Text="{Binding Login.SavedLogin, UpdateSourceTrigger=PropertyChanged}" 
                   Padding="5"
                   Grid.Row="1"
                   VerticalAlignment="Top" 
                   TextWrapping="NoWrap"
                   FontSize="17"
                   TextTrimming="CharacterEllipsis"
                   FontWeight="Bold"/>
            <TextBlock Text="{Binding Login.SavedPassword, UpdateSourceTrigger=PropertyChanged}" 
                   Padding="5"
                   TextWrapping="NoWrap"
                  Grid.Row="2"
                   VerticalAlignment="Top" 
                   FontSize="15"
                   TextTrimming="CharacterEllipsis"/>
        </Grid>
        <Grid Grid.Column="2" HorizontalAlignment="Right" Width="auto" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding SetClipboardCommand, Mode=OneTime}" Content="Copy Name" FontSize="15" Grid.Column="0" Width="auto">
                <Button.CommandParameter>
                    <system:Int32>2</system:Int32>
                </Button.CommandParameter>
            </Button>

            <Button Command="{Binding SetClipboardCommand, Mode=OneTime}" Content="Copy SavedLogin"    FontSize="15" Grid.Column="1" Width="auto">
                <Button.CommandParameter>
                    <system:Int32>3</system:Int32>
                </Button.CommandParameter>
            </Button>
            <Button Command="{Binding SetClipboardCommand, Mode=OneTime}" Content="Copy SavedPassword"    FontSize="15" Grid.Column="2" Width="auto">
                <Button.CommandParameter>
                    <system:Int32>3</system:Int32>
                </Button.CommandParameter>
            </Button>
        </Grid>
    </Grid>
</UserControl>
