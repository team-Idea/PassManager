<UserControl x:Class="ClientApp.Controls.AccountControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp.Controls" xmlns:system="clr-namespace:System;assembly=mscorlib" d:DataContext="{d:DesignInstance Type=local:AccountControlViewModel}"
             mc:Ignorable="d"
       MouseDoubleClick="UserControl_MouseDoubleClick"
             d:DesignHeight="90" 
             d:DesignWidth="920"
             MaxWidth="2000">
    <Grid>
        <TextBlock Text="{Binding Account.Login, UpdateSourceTrigger=PropertyChanged}" 
                   Padding="5"
                   Margin="7,2,435,0" 
                   VerticalAlignment="Top" 
                   TextWrapping="NoWrap"
                   FontSize="20"
                   TextTrimming="CharacterEllipsis"
                   FontWeight="Bold"/>
        <TextBlock Text="{Binding Account.Password, UpdateSourceTrigger=PropertyChanged}" 
                   Padding="5"
                   TextWrapping="NoWrap"
                   Margin="7,38,435,0" 
                   VerticalAlignment="Top" 
                   FontSize="15"
                   TextTrimming="CharacterEllipsis"/>
        <Grid HorizontalAlignment="Right" Width="420" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding SetClipboardCommand, Mode=OneTime}" Content="Copy Password" FontSize="15" Grid.Column="2" Margin="1,0,0,0">
                <Button.CommandParameter>
                    <system:Int32>2</system:Int32>
                </Button.CommandParameter>
            </Button>
            <Button Command="{Binding SetClipboardCommand, Mode=OneTime}" Content="Copy Login"    FontSize="15" Grid.Column="1" Margin="0,0,1,0">
                <Button.CommandParameter>
                    <system:Int32>3</system:Int32>
                </Button.CommandParameter>
            </Button>
        </Grid>
    </Grid>
</UserControl>
